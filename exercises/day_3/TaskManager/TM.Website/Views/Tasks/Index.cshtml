@section scripts{
 @Scripts.Render("~/bundles/knockoutjs")
}

<div class="page-header">
    <h1>Task list</h1>
</div>

<p>
    <a data-bind="click: checkTask" style="cursor: pointer;">Create new</a>
</p>

<hr />
<div data-bind="visible:isNew">
    <form class="form-horizontal" data-bind="submit: addTask">
        <div data-bind="with: newTask">
            <div class="form-group">
                <label for="iName" class="col-md-2 control-label">Name</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="iName" data-bind="value: name" />
                </div>
            </div>
            <div class="form-group">
                <label for="iDescription" class="col-md-2 control-label">Description</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="iDescription" data-bind="value: description" />
                </div>
            </div>
            <div class="form-group">
                <label for="iStartedOn" class="col-md-2 control-label">StartedOn</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="iStartedOn" data-bind="value: startedOn" />
                </div>
            </div>
            <div class="form-group">
                <label for="iEndedOn" class="col-md-2 control-label">EndedOn</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="iEndedOn" data-bind="value: endedOn" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2 col-md-offset-2">
                    <button type="submit" class="btn btn-info">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: tasks">
        <tr>
            <td><!-- ko text:name --><!--/ko--></td>
            <td><!-- ko text:moment(startedOn).format('MMMM Do YYYY')--><!--/ko--></td>
            <td><!-- ko text:moment(endedOn).format('MMMM Do YYYY')--><!--/ko--></td>
            <td>
                <!-- ko if: isActive -->
                Active
                <!-- /ko -->
                <!-- ko else -->
                Not active
                <!-- /ko -->
            </td>
            <td></td>
        </tr>
    </tbody>
</table>